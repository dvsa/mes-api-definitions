      "description": "Details about the vehicle to be used for the test",
      "type": "object",
      "properties": {
        "registrationNumber": {
          "description": "The vehicle registration number",
          "type": "string",
          "maxLength": 7
        },
        "gearboxCategory": {
          "$ref": "#/definitions/gearboxCategory"
        },
        "configuration": {
          "$ref": "#/definitions/configuration"
        }
      },
      "additionalProperties": false
    },
