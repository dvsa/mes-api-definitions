{
  "title": "Partial Large lorries test (CAT C) Schema",
  "type": "object",
  "definitions": {
	"testData": {
		"additionalProperties": false,
		"description": "Data associated with the test",
		"properties": {
			"dangerousFaults": {
				"$ref": "../Common/index.json#/definitions/dangerousFaults"
			},
			"drivingFaults": {
				"$ref": "../Common/index.json#/definitions/drivingFaults"
			},
			"eco": {
				"$ref": "../Common/index.json#/definitions/eco"
			},
			"ETA": {
				"$ref": "../Common/index.json#/definitions/ETA"
			},
			"faultSummary": {
				"$ref": "../Common/index.json#/definitions/faultSummary"
			},
			"manoeuvres": {
				"$ref": "#/definitions/manoeuvres"
			},
			"seriousFaults": {
				"$ref": "../Common/index.json#/definitions/seriousFaults"
			},
			"testRequirements": {
				"$ref": "#/definitions/testRequirements"
			},
			"vehicleChecks": {
				"$ref": "#/definitions/vehicleChecks"
			}
		},
		"type": "object"
	},
	"businessAddress": {
		"$ref": "../Common/index.json#/definitions/address",
		"description": "Address of the business the candidate relates to"
	},
	"businessName": {
		"description": "Name of the business the candidate relates to",
		"maxLength": 100,
		"type": "string"
	},
	"businessTelephone": {
		"description": "Telephone number of the business the candidate relates to",
		"maxLength": 20,
		"type": "string"
	},
	"manoeuvres": {
		"additionalProperties": false,
		"description": "The manoeuvres that were carried out during the test and any faults recorded against them",
		"properties": {
			"reverseLeft": {
				"additionalProperties": false,
				"properties": {
					"controlFault": {
						"$ref": "../Common/index.json#/definitions/manoeuvreOutcome"
					},
					"controlFaultComments": {
						"$ref": "../Common/index.json#/definitions/faultComments"
					},
					"observationFault": {
						"$ref": "../Common/index.json#/definitions/manoeuvreOutcome"
					},
					"observationFaultComments": {
						"$ref": "../Common/index.json#/definitions/faultComments"
					},
					"selected": {
						"$ref": "../Common/index.json#/definitions/manoeuvreIndicator"
					}
				},
				"type": "object"
			}
		},
		"type": "object"
	},
	"passCompletion": {
		"additionalProperties": false,
		"description": "Finalisation of a successful test outcome",
		"properties": {
			"code78Present": {
				"description": "Indicate presence of code 78 (automatic) on candidates license",
				"type": "boolean"
			},
			"passCertificateNumber": {
				"description": "The PCN issued to the candidate",
				"maxLength": 8,
				"minLength": 8,
				"type": "string"
			},
			"provisionalLicenceProvided": {
				"description": "Indicates whether the candidate submitted their provisional driving licence",
				"type": "boolean"
			}
		},
		"required": [
			"provisionalLicenceProvided",
			"passCertificateNumber",
			"code78Present"
		],
		"type": "object"
	},
	"testRequirements": {
		"additionalProperties": false,
		"description": "The test requirements that must be carried out during a test",
		"properties": {
			"angledStartControlledStop": {
				"description": "Indicates whether or not this test requirement was carried out",
				"type": "boolean"
			},
			"downHillStart": {
				"description": "Indicates whether or not this test requirement was carried out",
				"type": "boolean"
			},
			"normalStart1": {
				"description": "Indicates whether or not this test requirement was carried out",
				"type": "boolean"
			},
			"normalStart2": {
				"description": "Indicates whether or not this test requirement was carried out",
				"type": "boolean"
			},
			"upHillStart": {
				"description": "Indicates whether or not this test requirement was carried out",
				"type": "boolean"
			}
		},
		"type": "object"
	},
	"vehicleChecks": {
		"additionalProperties": false,
		"description": "Details of the Show Me and Tell Me questions asked during the test",
		"properties": {
			"showMeQuestion": {
				"items": {
					"additionalProperties": false,
					"properties": {
						"code": {
							"$ref": "../Common/index.json#/definitions/questionCode"
						},
						"description": {
							"$ref": "../Common/index.json#/definitions/questionDescription"
						},
						"outcome": {
							"$ref": "../Common/index.json#/definitions/questionOutcome"
						}
					},
					"type": "object"
				},
				"type": "array"
			},
			"showMeTellMeComments": {
				"$ref": "../Common/index.json#/definitions/faultComments"
			},
			"tellMeQuestions": {
				"items": {
					"additionalProperties": false,
					"properties": {
						"code": {
							"$ref": "../Common/index.json#/definitions/questionCode"
						},
						"description": {
							"$ref": "../Common/index.json#/definitions/questionDescription"
						},
						"outcome": {
							"$ref": "../Common/index.json#/definitions/questionOutcome"
						}
					},
					"type": "object"
				},
				"type": "array"
			}
		},
		"type": "object"
	},
	"vehicleDetails": {
		"additionalProperties": false,
		"description": "Details about the vehicle to be used for the test",
		"properties": {
			"gearboxCategory": {
				"$ref": "../Common/index.json#/definitions/gearboxCategory"
			},
			"registrationNumber": {
				"description": "The vehicle registration number",
				"maxLength": 7,
				"type": "string"
			},
			"vehicleHeight": {
				"description": "Indicates the height of the vehicle",
				"type": "number"
			},
			"vehicleWidth": {
				"description": "Indicates the width of the vehicle",
				"type": "number"
			}
		},
		"type": "object"
	}
  },
  "properties": {
  },
  "additionalProperties": false,
  "required": [
  ]
}