{
  "title": "Partial Test Result Cat BE Schema",
  "type": "object",
  "definitions": {
    "faultComments": {
      "description": "Comments recorded against a fault",
      "type": "string",
      "maxLength": 1000
    },
    "eyesightTest": {
      "type": "object",
      "properties": {
        "complete": {
          "type": "boolean"
        },
        "seriousFault": {
          "description": "Whether the candidate has failed the eyesight test",
          "type": "boolean"
        },
        "faultComments": {
          "$ref": "../Common/index.json#/definitions/faultComments"
        }
      },
      "additionalProperties": false
    },
    "manoeuvres": {
      "properties": {
        "reverseLeft": {
          "additionalProperties": false,
          "properties": {
            "controlFault": {
              "$ref": "../Common/index.json#/definitions/manoeuvreOutcome"
            },
            "controlFaultComments": {
              "$ref": "../Common/index.json#/definitions/faultComments"
            },
            "observationFault": {
              "$ref": "../Common/index.json#/definitions/manoeuvreOutcome"
            },
            "observationFaultComments": {
              "$ref": "../Common/index.json#/definitions/faultComments"
            },
            "selected": {
              "$ref": "../Common/index.json#/definitions/manoeuvreIndicator"
            }
          },
          "type": "object"
        }
      }
    },
    "vehicleChecks": {
      "additionalProperties": false,
      "description": "Details of the Show Me and Tell Me questions asked during the test",
      "properties": {
        "showMeQuestion": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "code": {
                "$ref": "../Common/index.json#/definitions/questionCode"
              },
              "description": {
                "$ref": "../Common/index.json#/definitions/questionDescription"
              },
              "outcome": {
                "$ref": "../Common/index.json#/definitions/questionOutcome"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "showMeTellMeComments": {
          "$ref": "#/definitions/faultComments"
        },
        "tellMeQuestions": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "code": {
                "$ref": "../Common/index.json#/definitions/questionCode"
              },
              "description": {
                "$ref": "../Common/index.json#/definitions/questionDescription"
              },
              "outcome": {
                "$ref": "../Common/index.json#/definitions/questionOutcome"
              }
            },
            "type": "object"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "vehicleDetails": {
      "properties": {
        "schoolCar": {
          "description": "Indicates whether the vehicle belongs to a driving school",
          "type": "boolean"
        },
        "dualControls": {
          "description": "Indicates whether or not the vehicle has dual controls fitted",
          "type": "boolean"
        },
        "vehicleHeight": {
          "description": "Indicates the height of the vehicle",
          "type": "number"
        },
        "vehicleWidth": {
          "description": "Indicates the width of the vehicle",
          "type": "number"
        }
      }
    },
    "candidate": {
      "properties": {
        "businessAddress": {
          "$ref": "../Common/index.json#/definitions/businessAddress"
        },
        "businessName": {
          "$ref": "../Common/index.json#/definitions/businessName"
        },
        "businessTelephone": {
          "$ref": "../Common/index.json#/definitions/businessTelephone"
        }
      },
      "type": "object"
    },
    "passCompletion": {
      "description": "Finalisation of a successful test outcome",
      "type": "object",
      "properties": {
        "code78Present": {
          "description": "Indicate presence of code 78 (automatic) on candidates license",
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "code78Present"
      ]
    },
    "uncoupleRecouple": {
      "additionalProperties": false,
      "properties": {
        "fault": {
          "$ref": "../Common/index.json#/definitions/manoeuvreOutcome"
        },
        "faultComments": {
          "$ref": "../Common/index.json#/definitions/faultComments"
        },
        "selected": {
          "$ref": "../Common/index.json#/definitions/manoeuvreIndicator"
        }
      },
      "type": "object"
    },
    "testData": {
      "description": "Data associated with the test",
      "type": "object",
      "properties": {
        "uncoupleRecouple": {
          "$ref": "#/definitions/uncoupleRecouple"
        },
        "manoeuvres": {
          "$ref": "#/definitions/manoeuvres"
        },
        "vehicleChecks": {
          "$ref": "#/definitions/vehicleChecks"
        },
        "testRequirements": {
          "$ref": "#/definitions/testRequirements"
        },
        "drivingFaults": {
          "$ref": "../Common/index.json#/definitions/drivingFaults"
        },
        "seriousFaults": {
          "$ref": "../Common/index.json#/definitions/seriousFaults"
        },
        "dangerousFaults": {
          "$ref": "../Common/index.json#/definitions/dangerousFaults"
        },
        "eco": {
          "$ref": "../Common/index.json#/definitions/eco"
        },
        "ETA": {
          "$ref": "../Common/index.json#/definitions/ETA"
        },
        "faultSummary": {
          "$ref": "../Common/index.json#/definitions/faultSummary"
        },
        "eyesightTest": {
          "$ref": "#/definitions/eyesightTest"
        }
      },
      "additionalProperties": false
    },
    "testRequirements": {
      "additionalProperties": false,
      "description": "The test requirements that must be carried out during a test",
      "properties": {
        "angledStartControlledStop": {
          "description": "Indicates whether or not this test requirement was carried out",
          "type": "boolean"
        },
        "downhillStart": {
          "description": "Indicates whether or not this test requirement was carried out",
          "type": "boolean"
        },
        "uphillStart": {
          "description": "Indicates whether or not this test requirement was carried out",
          "type": "boolean"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "passCompletion": {
      "$ref": "#/definitions/passCompletion"
    },
    "testData": {
      "$ref": "#/definitions/testData"
    }
  },
  "additionalProperties": false
}